<div class="container theme-showcase" role="main">
  <div class="row">
    <div class="col-md-12">
      <div class="jumbotron">
        <div align="left">
          <h3>Envie-nos uma mensagem!</h3>
          <%= form_for @contact do |f| %>
            <%= f.label :name %><br>
            <%= f.text_field :name, required: true %>

            <br><br>

            <%= f.label :email %><br>
            <%= f.email_field :email, required: true %>

            <br><br>

            <%= f.label :message %><br>
            <%= f.text_area :message, required: true %>

            <div class= "hidden">
              <%= f.label :nickname %><br>
              <%= f.text_field :nickname, hint: "Deixe esse campo em branco." %>
            </div>
            <br><br>
            <%= f.submit 'Enviar', class: "button" %>
          <% end %>
      </div>
    </div>
  </div>
</div>