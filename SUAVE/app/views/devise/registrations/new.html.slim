.container.theme-showcase role="main" 
  .row
    .col-md-12
      .jumbotron.jumb-login
        h2 Cadastrar
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .field
            = f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control login", placeholder: "Nome"
          .field
            = f.email_field :email, autocomplete: "email", class: "form-control login", placeholder: "Email"
          .field
            = f.password_field :password, autocomplete: "off", class: "form-control login", placeholder: "Senha"
          .field
            = f.password_field :password_confirmation, autocomplete: "off", class: "form-control login", placeholder: "Confirmar senha"
          .actions
            = f.submit "Cadastrar-se", class: "btn btn-danger btn-form"
        = render "devise/shared/links"
