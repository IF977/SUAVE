<div class="container theme-showcase" role="main">
  <div class="row">
    <div class="col-md-12">
      <div class="jumbotron jumb-login">
        <h2>Entrar</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control login", placeholder: "Email" %>
            </div>

            <div class="field">
              <%= f.password_field :password, autocomplete: "off", class: "form-control login", placeholder: "Senha"%>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label "Lembrar-me" %>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "Entrar", class: "btn btn-danger btn-login"%>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
